<Window x:Class="Modeling_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:Modeling_Canvas.UIELements"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="631*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>

        <local:CustomCanvas x:Name="MyCanvas" Background="White" UnitSize="100">
        </local:CustomCanvas>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="144*"/>
                <RowDefinition Height="585*"/>
            </Grid.RowDefinitions>
            <Label x:Name="CurrentElementLabel" Content="Label" HorizontalAlignment="Center" Margin="0,55,0,0" VerticalAlignment="Top" Grid.RowSpan="2" Width="170"/>
        </Grid>
    </Grid>
</Window>
